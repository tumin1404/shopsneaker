
@{
    ViewBag.Title = "Chi Tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container" ng-controller="ChiTietController">
    <div class="row">
        <div class="col-3 p-3">
            <div class="row">
                <div class="col-12">
                    @Html.Partial("_DanhMuc")
                </div>
            </div>
        </div>
        <div class="col-4 p-3">
            <div class="gallery">
                <div class="image-view">
                    <img src="~/Assets/Uploads/{{sanPhamView.HinhAnh}}" alt="">
                </div>
                <div class="image-list" data-role="select-image">
                </div>
            </div>
        </div>
        <div class="col-5 p-3">
            <div class="alert alert-danger" ng-show="sanPhamView.SoLuong == 0"><strong>Xin lỗi!</strong> Hiện tại sản phẩm này của cửa hàng đã hết. Mời bạn quay lại sau</div>
            <div class="product-title">
                {{sanPhamView.TenSP}}
                <p>Mã sản phẩm: #{{sanPhamView.MaSP}} </p>
            </div>
            <div class="product-price">
                {{sanPhamView.DonGia | currency:"":0}} đ
            </div>
            <div class="product-description">
                <p><b>Kích thước:</b> {{sanPhamView.KichThuoc}}</p>
                <p><b>Màu sắc:</b> {{sanPhamView.MauSac}}</p>
                {{sanPhamView.MoTa}}
            </div>
            <div ng-show="sanPhamView.SoLuong > 0" class="row mt-3">
                <div class="col-6">
                    <button type="submit" name="submit" class="btn btn-warning btn-block btn-icon" ng-click="ThemVaoGio(sanPhamView.MaSP)">
                        <i class="fa fa-cart-plus"></i>
                        <span>Thêm vào giỏ</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="title-line title-left">
        <h3>Sản phẩm liên quan</h3>
        <div class="line line-left"></div>
    </div>

    <div class="row list-products">
        <div class="col-3" ng-repeat="item in sanPhamLienQuan">
            <div class="product-card">
                <div class="product-image">
                    <img ng-src="~/Assets/Uploads/{{item.HinhAnh}}" alt="..." class="first-image">
                    <img ng-src="~/Assets/Uploads/{{item.HinhAnh}}" alt="..." class="second-image">
                    <div class="action">
                        <a ng-click="ThemVaoGio(item.MaSP)" data-cart="add"><i class="fa fa-cart-plus"></i></a>
                        <a href="/SanPham/Index?id={{item.MaSP}}" data-view="quick-view"><i class="fa fa-eye"></i></a>
                    </div>
                </div>
                <div class="product-content">
                    <a href="/SanPham/Index?id={{item.MaSP}}">{{item.TenSP}}</a>
                    <p>{{item.DonGia | currency:"":0}} đ</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Scripts/User/ChiTietController.js"></script>
}

